{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<style>
.ip-address-table {
    border-collapse: collapse;
    width: 100%;
}

.ip-cell {
    padding: 10px; /* Adjust the spacing as needed */
    border: 1px solid #ccc;
}
.btn {
    padding : 5px 10px 5px 10px;
}

</style>
    <div {{react_component('Navbar')}}></div>

    <div class="form-wrapper">
        <h1>Modifier Details:</h1>
        {{ form_start(form) }}
        
        <div class="form-group grid-layout">
            <div style="display: flex; flex-direction: row;">
                <div style="flex: 1;"  >
                
                    {{ form_label(form.email) }}
                    
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div style="flex: 1;"  >
                    {{ form_label(form.cin) }}
                    {{ form_widget(form.cin, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div style="flex: 1;"  >
                    {{ form_label(form.lastname) }}
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div style="flex: 1;"  >
                    {{ form_label(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="form-group" >
            <div style="display: flex; flex-direction: row;">
            <div style="flex: 1;" >
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div  >
                    {{ form_label(form.naissance) }}
                    {{ form_widget(form.naissance, {'attr': {'class': 'form-control-n'}}) }}
                </div>
                <div style="flex: 1;"  >
                    {{ form_label(form.telephone) }}
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                </div>
                 <div style="flex: 1;"  >
                    {{ form_label(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
<div class="form-group">
    {{ form_label(form.ipAddresses) }}
    <table class="ip-address-table">
        <tbody>
            {% for i in 0..(form.ipAddresses|length / 8) %}
                <tr>
                    {% for j in 0..7 %}
                        {% set index = 8 * i + j %}
                        {% if form.ipAddresses[index] is defined %}
                            <td class="ip-cell">
                                {{ form_widget(form.ipAddresses[index]) }}
                                {{ form_label(form.ipAddresses[index]) }}
                            </td>
                        {% endif %}
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

    <div class="flex-container">
    <a href="{{ path('app_user_index') }}" class="btn">Back To List</a>
    <button type="submit" class="btn btn-primary">Save</button>

    </div>

       {{ form_end(form) }}
    </div>
{% endblock %}
